---

interface menu {
    nombre: string,
    href: string
}

const menuItems: menu[] = [
    {nombre:"Inicio", href:"/"},
    {nombre:"Sobre mi", href:"#sobremi"},
    {nombre:"Servicio", href:"#servicio"},
    {nombre:"Proyectos", href:"#proyectos"},
    {nombre:"Blog", href:"#"},
    {nombre:"Contacto", href:"#contacto"},
    
    ]
---

<header
  id="header"
  class="fixed top-0 left-0 w-full z-50
         hidden lg:flex
         transition-all duration-500"
>
  <nav
    class="max-w-7xl w-full mx-auto
           px-6 py-4
           flex justify-between items-center
           backdrop-blur-md
           bg-black/20
           border-b border-white/10
           rounded-b-2xl"
  >
    <!-- Logo -->
    <a
      href="/"
      class="text-xl tracking-wide
             font-DelaGothicOne
             text-blanco
             transition-colors duration-300
             hover:text-primario"
    >
      KCMSMART
    </a>

    <!-- Menú -->
    <ul class="flex items-center gap-10">
      {
        menuItems.map((i) => (
          <li class="relative group">
            <a
              href={i.href}
              class="text-blanco/80
                     font-Poppins text-sm
                     font-light tracking-wide
                     transition-all duration-300
                     hover:text-blanco"
            >
              {i.nombre}
            </a>

            <!-- Línea animada -->
            <span
              class="absolute left-0 -bottom-1
                     w-0 h-[2px]
                     bg-primario
                     transition-all duration-300
                     group-hover:w-full"
            ></span>
          </li>
        ))
      }
    </ul>
  </nav>
</header>