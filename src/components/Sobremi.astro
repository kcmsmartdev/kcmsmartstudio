            </p>
          </article>
        </div>
      </div>

      <div
        class="max-w-5xl w-full flex justify-center
         mx-auto mt-40 px-6"
      >
        <span
          class="font-Poppins font-light
           text-2xl lg:text-6xl
           text-center
           bg-linear-to-r from-primario via-secundario to-terciario
           bg-size-[200%_200%]
           bg-clip-text text-transparent
           animate-gradient-x"
        >
          “Me especializo en desarrollo web informativo e institucional”
        </span>
      </div>
    </section>



<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const statsSection = document.getElementById("stats");
    const numbers = document.querySelectorAll(".stat-number");

    let started = false;

    const animateNumbers = () => {
      numbers.forEach((num) => {
        const target = parseInt(num.getAttribute("data-target"));
        const prefix = num.getAttribute("data-prefix") || "";
        const suffix = num.getAttribute("data-suffix") || "";

        let current = 0;
        const increment = target / 80;

        const updateNumber = () => {
          current += increment;

          if (current < target) {
            num.textContent = prefix + Math.floor(current) + suffix;
            requestAnimationFrame(updateNumber);
          } else {
            num.textContent = prefix + target + suffix;
          }
        };

        updateNumber();
      });
    };

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && !started) {
            animateNumbers();
            started = true;
          }
        });
      },
      { threshold: 0.4 }
    );

    if (statsSection) {
      observer.observe(statsSection);
    }
  });
</script>