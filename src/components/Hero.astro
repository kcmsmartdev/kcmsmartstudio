---
import { Image } from "astro:assets";
import {Icon} from "astro-icon/components"
import ImagenHero from "../assets/images/imagen-hero-movil.png";
import ImagenHeroPc from "../assets/images/imagen-hero-pc.png";
import ImagenAstro from "../assets/images/astro.png";
import ImagenWordpress from "../assets/images/wordpress.png";

---

<section
  class="relative overflow-hidden
         bg-linear-to-b
         from-Vdeg via-Rdeg to-Odeg"
>
  <!-- Glow decorativo -->
  <div class="absolute -top-40 -left-40 w-[500px] h-[500px]
              bg-primario/20 blur-[120px] rounded-full"></div>

  <div class="max-w-7xl mx-auto p-6 relative z-10">

    <div class="flex flex-col mt-28 lg:mt-40 items-center text-center">

      <!-- H1 -->
      <h1
        class="max-w-4xl
               font-DelaGothicOne
               text-3xl md:text-5xl lg:text-7xl
               text-blanco
               leading-[1.05]
               tracking-wide"
      >
        SITIO WEB
        <span class="block text-terciario">
          PROFESIONAL
        </span>
        PARA TU EMPRESA
      </h1>

      <!-- Subtexto -->
      <p
        class="max-w-2xl
               text-blanco/70
               text-base md:text-lg lg:text-xl
               font-Poppins
               mt-8"
      >
        Diseño moderno, carga rápida y optimización SEO para que tu
        negocio genere confianza y convierta visitas en clientes.
      </p>

      <!-- Botones -->
      <div class="flex flex-col sm:flex-row mt-12 items-center gap-6">

        <!-- CTA principal -->
        <a
          href="#"
          class="group relative overflow-hidden
                 flex gap-4 items-center
                 text-sm lg:text-base
                 text-blanco font-Poppins font-semibold
                 bg-btn px-10 py-4 rounded-full
                 transition-all duration-500
                 hover:-translate-y-1
                 hover:shadow-[0_15px_40px_rgba(0,0,0,0.35)]"
        >
          <span
            class="absolute inset-0 -translate-x-full
                   bg-gradient-to-r
                   from-transparent
                   via-white/30
                   to-transparent
                   group-hover:translate-x-full
                   transition-transform duration-1000"
          ></span>

          <span class="relative z-10">
            Hablemos por WhatsApp
          </span>

          <Icon
            name="iconoir:whatsapp-solid"
            class="relative z-10 size-5
                   transition-transform duration-300
                   group-hover:rotate-6 group-hover:scale-110"
          />
        </a>

        <!-- CTA secundario -->
        <a
          href="#proyectos"
          class="px-10 py-4
                 border border-secundario/50
                 rounded-full
                 text-secundario text-sm lg:text-base
                 font-semibold
                 transition-all duration-300
                 hover:bg-secundario/10
                 hover:-translate-y-1"
        >
          Ver proyectos
        </a>

      </div>
    </div>

    <!-- Imagen -->
    <div class="mt-16 lg:mt-28 flex justify-center relative">

      <div class="absolute inset-0 flex justify-center">
        <div class="w-150 h-75
                    bg-primario/10 blur-[120px]
                    rounded-full"></div>
      </div>

      <Image
        src={ImagenHeroPc}
        alt="Sitio web profesional KCMSMART"
        class="relative w-full max-w-[1000px]
               rounded-3xl
               shadow-[0_40px_100px_rgba(0,0,0,0.5)]"
        fetchpriority="high"
      />
    </div>

    <!-- Tecnología -->
    <div class="flex flex-col items-center gap-6 mt-20">

      <span class="text-blanco/50 font-Poppins text-sm tracking-wide">
        TECNOLOGÍA QUE UTILIZAMOS
      </span>

      <div class="flex gap-10  justify-center">

        <Image
          src={ImagenAstro}
          class="w-8 opacity-70 hover:opacity-100 transition"
          alt="Astro"
        />

        <Image
          src={ImagenWordpress}
          class="w-8 opacity-70 hover:opacity-100 transition"
          alt="WordPress"
        />

      </div>

    </div>

  </div>
</section>