            class="grid grid-cols-3 gap-8 mt-14 pt-10 border-t border-white/10"
          >
            <article class="flex flex-col">
              <span
                class="text-3xl lg:text-4xl
                   font-DelaGothicOne text-blanco"
              >
                +15
              </span>
              <span
                class="text-sm lg:text-base
                   font-medium text-blanco/80"
              >
                Páginas creadas
              </span>
            </article>

            <article class="flex flex-col">
              <span
                class="text-3xl lg:text-4xl
                   font-DelaGothicOne text-blanco"
              >
                +2
              </span>
              <span
                class="text-sm lg:text-base
                   font-medium text-blanco/80"
              >
                Años de experiencia
              </span>
            </article>

            <article class="flex flex-col">
              <span
                class="text-3xl lg:text-4xl
                   font-DelaGothicOne text-blanco"
              >
                100%
              </span>
              <span
                class="text-sm lg:text-base
                   font-medium text-blanco/80"
              >
                Clientes satisfechos
              </span>
            </article>
          </div>
        </div>

        <div
          class="mt-14 lg:mt-32
            grid grid-cols-1 sm:grid-cols-2
            gap-6 lg:gap-8"
        >
          <!-- 01 -->
          <article
            class="group h-full flex flex-col gap-5
           border border-white/10
           rounded-2xl p-6
           transition-all duration-500
           hover:border-primario
           hover:-translate-y-2
           hover:bg-white/5
           hover:shadow-xl
           hover:shadow-primario/10
           lg:even:translate-y-10"
