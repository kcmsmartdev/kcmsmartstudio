  <main class="w-full">
    <Hero />
    <section class="w-full bg-Odeg">
      <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 p-3 gap-10">
        <div class="mt-24 lg:mt-32 flex flex-col gap-6 max-w-2xl">
          <!-- TÍTULO -->
          <h2
            class="text-3xl lg:text-5xl uppercase
                text-blanco font-DelaGothicOne
                leading-[1.1] tracking-wide"
